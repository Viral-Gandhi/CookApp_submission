<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.viral.cookapp_recipeselect.RecipeSelect"
    tools:showIn="@layout/activity_recipe_select"
    android:columnCount="3"
    android:rowCount="11">

    //*Code for the text box as title *//
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which Recipe Would You Like?"
        android:id="@+id/recipeSelectTitleTextView"
        android:gravity="center"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="3"
        android:layout_column="0"
        android:textStyle="bold|italic"
        android:layout_rowSpan="2"
        android:textSize="25dp" />

    //*Code below defines the scroll view which fill the screen on the phone.
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        //*Layout code below. Shows the linear layout and matches to the scroll view, whilst saying
        //*whilst saying that the scroll will be vertical
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            /*Code below defines several buttons on the screen, each of which would eventually be
            *linked to a separate activity listing the recipe. Outside of defining the desired style
            * this code allows to define an ID, the position of the button in the grid and whether
            *whether or not the button is clickable.*/
    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="James's Pudding"
        android:id="@+id/Rec1"
        android:layout_column="0"
        android:layout_row="2"
        android:clickable="true" />
    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Recipe 2"
        android:id="@+id/Rec2"
        android:layout_column="0"
        android:layout_row="3"
        android:clickable="true" />
    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Recipe 3"
        android:id="@+id/Rec3"
        android:layout_column="0"
        android:layout_row="4"
        android:clickable="true" />
    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Recipe 4"
        android:id="@+id/Rec4"
        android:layout_column="0"
        android:layout_row="5"
        android:clickable="true" />
    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Recipe 5"
        android:id="@+id/Rec5"
        android:layout_column="0"
        android:layout_row="6"
        android:clickable="true" />
    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Recipe 6"
        android:id="@+id/Rec6"
        android:layout_column="0"
        android:layout_row="7"
        android:clickable="true" />
    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Recipe 7"
        android:id="@+id/Rec7"
        android:layout_column="0"
        android:layout_row="8"
        android:clickable="true" />
    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Recipe 8"
        android:id="@+id/Rec8"
        android:layout_column="0"
        android:layout_row="9"
        android:clickable="true" />
    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Recipe 9"
        android:id="@+id/Rec9"
        android:layout_column="0"
        android:layout_row="10"
        android:clickable="true" />
    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Recipe 10"
        android:id="@+id/Rec10"
        android:layout_column="0"
        android:layout_row="11"
        android:clickable="true" />
            <Button
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:text="Recipe 11"
                android:id="@+id/Rec11"
                android:layout_column="0"
                android:layout_row="12"
                android:clickable="true" />
            <Button
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:text="Recipe 12"
                android:id="@+id/Rec12"
                android:layout_column="0"
                android:layout_row="13"
                android:clickable="true" />

        </android.support.v7.widget.LinearLayoutCompat>
    </ScrollView>
</GridLayout>
