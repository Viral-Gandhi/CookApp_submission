<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.viral.cookapp_recipeselect.CuisineFind"
    tools:showIn="@layout/activity_cuisine_find">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What Cuisine Tickles Your Fancy?"
        android:id="@+id/textViewCuisineChoose"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowSpan="2"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:text="Indian"
                android:id="@+id/buttonIndian"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:clickable="true"/>
            <Button
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:text="Mexican"
                android:id="@+id/buttonMexican"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:clickable="true"/>
            <Button
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:text="Chinese"
                android:id="@+id/buttonChinese"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:clickable="true"/>
            <Button
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:text="Italian"
                android:id="@+id/buttonItalian"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:clickable="true"/>
            <Button
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:text="French"
                android:id="@+id/buttonFrench"
                android:layout_row="7"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:clickable="true"/>
        </LinearLayout>
    </ScrollView>
</GridLayout>
