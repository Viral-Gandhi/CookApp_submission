<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.viral.cookapp_recipeselect">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Cooking Up Something Special"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Welcome"
            android:label="Welcome"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FindMethod"
            android:label="@string/title_activity_find_method"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchRecipes"
            android:label="@string/title_activity_search_recipes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CuisineFind"
            android:label="@string/title_activity_cuisine_find"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RecipeSelect"
            android:label="Recipe Selection"
            android:theme="@style/AppTheme.NoActionBar" />
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".RecKeema"
            android:label="@string/title_activity_rec_keema"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
